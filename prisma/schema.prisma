generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Museum {
  id_museum   Int          @id @default(autoincrement())
  name        String
  description String
  location    String
  image_url       String
  artGallery  ArtGallery[] 
  orderTicket OrderTicket[]
}

model ArtGallery {
  id            Int     @id @default(autoincrement())
  image_url      String
  title         String
  description   String
  museumId      Int
  museum        Museum  @relation(fields: [museumId], references: [id_museum])
}

model Feedback {
  id_feedback Int    @id @default(autoincrement())
  full_name   String
  email       String
  subject     String
  message     String
  date        DateTime @default(now())
}

model OrderTicket {
  id_order    Int     @id @default(autoincrement())
  Oid_museum  Int     @unique
  jumlah      Int
  name        String
  email       String
  accepted    Boolean @default(false)

  museum      Museum  @relation(fields: [Oid_museum], references: [id_museum])
}
