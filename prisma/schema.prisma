generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Museum {
  idMuseum   Int          @id @default(autoincrement())
  name        String
  description String
  location    String
  imageUrl       String
  isPublic Boolean @default(true)
  ticketPrice Float? 
  artGallery  ArtGallery[] 
  orderTicket OrderTicket[]

  events events[]
}

model ArtGallery {
  id            Int     @id @default(autoincrement())
  imageUrl      String
  title         String
  description   String
  museumId      Int
  museum        Museum  @relation(fields: [museumId], references: [idMuseum])
}

model Feedback {
  idFeedback Int    @id @default(autoincrement())
  fullName   String
  email       String
  subject     String
  message     String
  date        DateTime @default(now())
}

model OrderTicket {
  idOrder    Int     @id @default(autoincrement())
  OidMuseum  Int     @unique
  qty      Int
  total Float
  name        String
  email       String
  accepted    Boolean @default(false)
  museum      Museum  @relation(fields: [OidMuseum], references: [idMuseum])
}

model events {
  id Int @id @default(autoincrement())
  title String
  description String
  startDate DateTime
  endDate DateTime
  museumId Int @unique
  museum Museum @relation(fields: [museumId], references: [idMuseum])
}
