generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Museum {
  idMuseum   Int          @id @default(autoincrement())
  name        String
  description String
  location    String
  imageUrl       String
  rate Float? @default(0)
  totalVote Int? @default(0)
  artGallery  ArtGallery[] 
  museumRateList MuseumRateList[]

  events events[]
}

model ArtGallery {
  id            Int     @id @default(autoincrement())
  imageUrl      String
  title         String
  description   String
  museumId      Int
  museum        Museum  @relation(fields: [museumId], references: [idMuseum])
}

model Feedback {
  idFeedback Int    @id @default(autoincrement())
  fullName   String
  email       String
  subject     String
  message     String
  date        DateTime @default(now())
}

model MuseumRateList {
  id    Int     @id @default(autoincrement())
  idMuseum  Int     @unique
  email String
  rate Float 
  museum      Museum  @relation(fields: [idMuseum], references: [idMuseum])
}

model events {
  id Int @id @default(autoincrement())
  title String
  description String
  startDate DateTime
  endDate DateTime
  imageUrl String
  museumId Int @unique
  museum Museum @relation(fields: [museumId], references: [idMuseum])
}
